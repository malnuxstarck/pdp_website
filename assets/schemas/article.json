{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Article",
    "description": "An article for Progdupeupl community website",
    "type": "object",
    "properties": {
        "title": {
            "description": "Title of the article",
            "type": "string",
            "maxLength": 80
        },
        "description": {
            "description": "Small introductive sentence to be displayed next to the title",
            "type": "string",
            "maxLength": 200
        },
        "author": {
            "description": "The author's nickname",
            "type": "string"
        },
        "tags": {
            "description": "List of all associated tags",
            "type": "array",
            "items": {
                "description": "Tag",
                "type": "string"
            },
            "uniqueItems": true
        },
        "text": {
            "description": "Content of the article",
            "type": "string"
        },
    "required": ["title", "author"]
}
